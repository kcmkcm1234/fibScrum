<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Holo">
        <!-- Customize your theme here. -->
    </style>
    <style name="Fullscreen" parent="android:Theme.Holo.NoActionBar.Fullscreen">
    </style>
    <style name="DisplayFractional">
        <item name="android:textSize">@dimen/display_height_medium</item>
        <item name="android:textColor">#aaaaff</item>
    </style>
    <style name="DisplaySingleDigit">
        <item name="android:textSize">@dimen/display_height_big</item>
        <item name="android:textColor">#ffffff</item>
    </style>
    <style name="DisplayDoubleDigit">
        <item name="android:textSize">@dimen/display_height_medium</item>
        <item name="android:textColor">#1EFF25</item>
    </style>
    <style name="DisplayTriplerDigit">
        <item name="android:textSize">@dimen/display_height_small</item>
        <item name="android:textColor">#ff0000</item>
    </style>
    <style name="DisplayText">
        <item name="android:textSize">@dimen/display_height_small</item>
        <item name="android:textColor">#0000ff</item>
    </style>
    <style name="DisplayTextSmall" parent="DisplayText">
        <item name="android:textSize">@dimen/display_height_xsmall</item>
    </style>
    <style name="DisplayQuestion" parent="DisplaySingleDigit">
        <item name="android:textColor">#ffff00</item>
    </style>

</resources>
